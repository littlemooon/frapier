{
  "name": "littlebox",
  "version": "1.0.0",
  "description": "Reusable functions and littlemooon site",
  "author": "fredwright0@gmail.com",
  "license": "MIT",
  "engines": {
    "node": "10.x.x"
  },
  "scripts": {
    "check": "npx npm-check -u",
    "deploy:prod": "now --prod",
    "deploy": "now",
    "lint": "eslint --fix . --ext .js,.ts",
    "logs": "now logs -f littlebox.littlemooon.now.sh",
    "test": "echo 'no tests'"
  },
  "dependencies": {
    "@now/node": "^1.0.0",
    "debug": "^4.1.1",
    "node-fetch": "^2.6.0",
    "supports-color": "^7.1.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/node-fetch": "^2.5.2",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "typescript": "^3.6.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/littlemooon/littlebox.git"
  },
  "bugs": {
    "url": "https://github.com/littlemooon/littlebox/issues"
  },
  "homepage": "https://github.com/littlemooon/littlebox#readme",
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module",
      "project": "tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "off"
    },
    "overrides": [{
      "files": [
        "*.ts"
      ],
      "rules": {
        "@typescript-eslint/no-var-requires": [
          "error"
        ]
      }
    }]
  },
  "eslintIgnore": [
    "**/node_modules/**"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "keywords": [
    "typescript",
    "now",
    "eslint",
    "prettier"
  ]
}
